<table class="table table-striped">
  <thead>
  <tr>
    <th>Cód.</th>
    <th>Empresa</th>
    <th>Preço atual</th>
    <% if @user.id == current_user.id %>
        <th>Opções</th>
    <% end %>
  </tr>
  </thead>
<tbody>
<% @user_stocks.each do |user_stock| %>
    <tr>
      <td><%= user_stock.ticker %></td>
      <td><%= user_stock.name %></td>
      <td><%= user_stock.price %></td>
      <% if @user.id == current_user.id %>
          <td>
            <%= link_to 'Remover', user_stock_path(user_stock), :method => :delete, :data => {:confirm => 'Tem certeza que deseja remover?'},
                        :class => 'btn btn-xs btn-danger' %>
          </td>
      <% end %>
    </tr>
<% end %>
</tbody>
</table>
