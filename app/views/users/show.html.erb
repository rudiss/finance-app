<h2>Detalhes do usuário</h2>

<dl class="dl-horizontal">

  <dt><strong>Nome</strong></dt>

  <dd><%= @user.full_name %></dd>

  <dt><strong>Email</strong></dt>

  <dd><%= @user.email %></dd>

</dl>

<% if @user.stocks.size > 0 %>

    <%= render 'stocks/list' %>

<% else %>

    <p class="lead">Esse usuário não esta seguindo nenhuma ações</p>

<% end %>

<%= link_to "Voltar", my_friends_path, class: 'btn btn-primary' %>

